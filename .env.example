# Environment Configuration Template
# Copy this to .env and fill in your values

# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# LLM Settings
DEFAULT_MODEL=gpt-4o-mini
TEMPERATURE=0.7
MAX_TOKENS=2000

# Embedding Settings
EMBEDDING_MODEL=text-embedding-3-small

# Vector Database Settings
CHROMA_DB_PATH=./rag-database/vectordb
MEMORY_DB_PATH=./rag-database/memory

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5

# Agent Settings
MAX_ITERATIONS=10
MEMORY_WINDOW=5
AGENT_TIMEOUT=30

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# MCP Settings
MCP_ENABLED=true
MCP_HOST=localhost
MCP_PORT=8001

# Logging
LOG_LEVEL=INFO

# Agent-specific settings
PLANNING_STREAM_ENABLED=true
THINKING_STREAM_ENABLED=true

# Validation settings
VALIDATION_ERROR_THRESHOLD=3
ROLE_CORRECTION_THRESHOLD=5
